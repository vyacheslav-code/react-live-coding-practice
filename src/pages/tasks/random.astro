---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

// Get all tasks for client-side random selection
const allTasks = await getCollection('tasks');
const taskSlugs = allTasks.map(task => task.id);
---

<BaseLayout title="Random Task - React Live Coding Practice">
  <div class="min-h-screen flex items-center justify-center bg-gray-900">
    <div class="text-center">
      <h1 class="text-4xl font-bold text-white mb-4">Loading Random Task...</h1>
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-500 mx-auto"></div>
    </div>
  </div>

  <script define:vars={{ taskSlugs }}>
    // Redirect to random task
    const randomSlug = taskSlugs[Math.floor(Math.random() * taskSlugs.length)];
    window.location.href = `/tasks/${randomSlug}`;
  </script>
</BaseLayout>
