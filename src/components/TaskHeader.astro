---
interface Props {
  currentSlug?: string;
  prevSlug?: string;
  nextSlug?: string;
}

const { currentSlug, prevSlug, nextSlug } = Astro.props;
---

<nav class="flex flex-col sm:flex-row gap-3 sm:gap-4 mb-8" aria-label="Task navigation">
  <a
    href={prevSlug ? `/tasks/${prevSlug}` : '#'}
    class={`
      flex-1 px-6 py-3 rounded-lg font-medium text-center transition-all duration-200
      ${prevSlug
        ? 'bg-gray-800 hover:bg-gray-700 text-gray-100 hover:shadow-lg hover:shadow-primary-500/20 border border-gray-700 hover:border-primary-500/50'
        : 'bg-gray-900 text-gray-600 border border-gray-800 cursor-not-allowed opacity-50'}
    `}
    aria-disabled={!prevSlug}
    tabindex={!prevSlug ? -1 : 0}
  >
    <span class="inline-flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Previous
    </span>
  </a>

  <a
    href="/tasks/random"
    class="
      flex-1 px-6 py-3 rounded-lg font-medium text-center transition-all duration-200
      bg-gradient-to-r from-primary-600 to-primary-500 hover:from-primary-500 hover:to-primary-400
      text-white hover:shadow-lg hover:shadow-primary-500/30 border border-primary-500/50
    "
  >
    <span class="inline-flex items-center gap-2">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
      </svg>
      Random Task
    </span>
  </a>

  <a
    href={nextSlug ? `/tasks/${nextSlug}` : '#'}
    class={`
      flex-1 px-6 py-3 rounded-lg font-medium text-center transition-all duration-200
      ${nextSlug
        ? 'bg-gray-800 hover:bg-gray-700 text-gray-100 hover:shadow-lg hover:shadow-primary-500/20 border border-gray-700 hover:border-primary-500/50'
        : 'bg-gray-900 text-gray-600 border border-gray-800 cursor-not-allowed opacity-50'}
    `}
    aria-disabled={!nextSlug}
    tabindex={!nextSlug ? -1 : 0}
  >
    <span class="inline-flex items-center gap-2">
      Next
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </span>
  </a>
</nav>
