---
interface Props {
  currentSlug?: string;
  prevSlug?: string;
  nextSlug?: string;
}

const { currentSlug, prevSlug, nextSlug } = Astro.props;
---

<nav class="flex flex-col sm:flex-row gap-3 mb-12" aria-label="Task navigation">
  <a
    href={prevSlug ? `/tasks/${prevSlug}` : '#'}
    class={`
      flex-1 px-4 py-2.5 rounded-md text-sm font-medium text-center transition-all duration-150
      ${prevSlug
        ? 'bg-transparent hover:bg-neutral-900 text-neutral-400 hover:text-white border border-neutral-800 hover:border-neutral-700'
        : 'bg-transparent text-neutral-700 border border-neutral-800 cursor-not-allowed opacity-50'}
    `}
    aria-disabled={!prevSlug}
    tabindex={!prevSlug ? -1 : 0}
  >
    <span class="inline-flex items-center justify-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Previous
    </span>
  </a>

  <a
    href="/tasks/random"
    class="
      flex-1 px-4 py-2.5 rounded-md text-sm font-medium text-center transition-all duration-150
      bg-white hover:bg-neutral-200 text-black border border-white
    "
  >
    <span class="inline-flex items-center justify-center gap-2">
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
      </svg>
      Random Task
    </span>
  </a>

  <a
    href={nextSlug ? `/tasks/${nextSlug}` : '#'}
    class={`
      flex-1 px-4 py-2.5 rounded-md text-sm font-medium text-center transition-all duration-150
      ${nextSlug
        ? 'bg-transparent hover:bg-neutral-900 text-neutral-400 hover:text-white border border-neutral-800 hover:border-neutral-700'
        : 'bg-transparent text-neutral-700 border border-neutral-800 cursor-not-allowed opacity-50'}
    `}
    aria-disabled={!nextSlug}
    tabindex={!nextSlug ? -1 : 0}
  >
    <span class="inline-flex items-center justify-center gap-2">
      Next
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </span>
  </a>
</nav>
