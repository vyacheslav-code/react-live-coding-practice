---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'React Live Coding Practice',
  description = 'Practice React coding challenges with live code editor and instant feedback'
} = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
    <style>
      /* Sidebar responsive margins */
      .sidebar-open header,
      .sidebar-open footer,
      .sidebar-open #main-content {
        margin-left: 288px; /* w-72 = 18rem = 288px */
      }
      .sidebar-collapsed header,
      .sidebar-collapsed footer,
      .sidebar-collapsed #main-content {
        margin-left: 0;
      }
      @media (max-width: 1023px) {
        .sidebar-open header,
        .sidebar-open footer,
        .sidebar-open #main-content {
          margin-left: 0;
        }
      }
    </style>
  </head>
  <body class="bg-gray-950 text-gray-100 min-h-screen sidebar-open">
    <div class="flex flex-col min-h-screen">
      <header class="border-b border-gray-800 bg-gray-900/50 backdrop-blur-sm sticky top-0 z-10 transition-all duration-300">
        <div class="container mx-auto px-4 py-4">
          <h1 class="text-2xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-primary-400 to-primary-600">
            <a href="/" class="hover:opacity-80 transition-opacity">React Live Coding Practice</a>
          </h1>
        </div>
      </header>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="border-t border-gray-800 bg-gray-900/50 backdrop-blur-sm py-6 transition-all duration-300">
        <div class="container mx-auto px-4 text-center text-gray-400 text-sm">
          <p>Practice makes perfect. Keep coding!</p>
        </div>
      </footer>
    </div>
  </body>
</html>
